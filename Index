  <!-- Load PayPal (after content so the page is quick) -->
  <script src="https://www.paypal.com/sdk/js?client-id=sb&currency=USD" defer></script>
  <script>
    // load real SDK with your client id after DOM ready
    document.addEventListener('DOMContentLoaded',()=> {
      const s=document.createElement('script');
      s.src=`https://www.paypal.com/sdk/js?client-id=${encodeURIComponent(PAYPAL_CLIENT_ID)}&currency=USD`;
      s.onload=()=>{
        const plans=[{name:'Starter',price:49},{name:'Pro',price:79},{name:'Powerhouse',price:129}];
        for(const p of plans){
          const id='pp-'+p.name.toLowerCase(); const mount=document.getElementById(id); if(!mount) continue;
          // @ts-ignore
          paypal.Buttons({
            style:{ layout:'vertical' },
            createOrder: (_d, actions)=> actions.order.create({ purchase_units:[{ amount:{ value:String(p.price) }, description:`${p.name} Resume Plan` }]}),
            onApprove: async (_d, actions)=>{ const d = await actions.order.capture(); successFlow(p.name, d?.id || Math.random().toString(36).slice(2,10).toUpperCase()); }
          }).render('#'+id);
        }
      };
      document.body.appendChild(s);
    });
  </script>
