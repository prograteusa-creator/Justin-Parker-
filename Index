<script>
  // Your PayPal client ID (you provided earlier)
  const PAYPAL_CLIENT_ID = "3ztxQd0FVwUF4dPjQ7tb2rwT";

  function successFlow(plan, orderId){
    const ok = document.getElementById('ok');
    ok.innerHTML = `Payment received for <b>${plan}</b>. Order ID: <b>${orderId}</b>. Scroll to intake below.`;
    ok.style.display = 'block';
    document.getElementById('plan').value = plan;
    document.getElementById('order').value = orderId;
    location.hash = 'intake';
  }
  function testPurchase(plan){
    const id = Math.random().toString(36).slice(2,10).toUpperCase();
    successFlow(plan, id);
  }
  function copyPromo(){
    const u = new URL(location.href);
    u.searchParams.set('utm_source','social');u.searchParams.set('utm_medium','organic');u.searchParams.set('utm_campaign','resume_launch');
    navigator.clipboard.writeText(`Get a pro, ATS-friendly resume in 24h: ${u}`).then(()=>alert('Promo link copied')).catch(()=>alert('Copy failed'));
  }
</script>
